<launch>
  <arg name="pi/2" value="1.5707963267"/>
  <arg name="pi" value="3.14159265359"/>
  <arg name="optical_rotate" value="0 0 0 -$(arg pi/2) -$(arg pi/2)"/>

  <node pkg="tf" type="static_transform_publisher" name="base_link_camera_link"
    args="0 0 0 $(arg pi) $(arg pi) 0 base_link camera_link 200"/>
</launch>
